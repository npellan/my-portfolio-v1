<% include partials/header %> 
      <nav aria-label="Breadcrumb" class="breadcrumb">
        <ul>
          <li class="breadcrumb__li"><a href="/">np</a></li>
          <li class="breadcrumb__li breadcrumb__li--current"><span aria-current="page" >Contact</span></li>
      </ul>
      </nav>
      <div class="np-hero">
        <h1 class="np-hero__title">Entrons en contact</h1>
        <p class="np-hero__subtitle">Que ce soit pour discuter ou pour travailler ensemble, n'hésitez pas à me contacter</p>
      </div>
    </header>
    <main class="np-main">
      <section class="np-section">
        <% if (locals.error) { %>
          <p class="np-contact-error"><%= error %></p>
        <% } %>
        <% if (locals.success) { %>
          <p class="np-contact-success"><%= success %></p>
        <% } %>
        <form action="/contact" method="post" class="np-form">
          <div class="np-form__input">
            <label for="name">Nom et prénom</label>
            <input type="text" name="name" id="name" placeholder="Entrez votre nom et prénom" required>
          </div>
          <div class="np-form__input">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Entrez votre email" required>
          </div>
          <div class="np-form__input">
            <label for="message">Message</label>
            <textarea name="message" id="message" placeholder="Entrez votre message" required></textarea>
          </div>
          <div class="button">
            <button type="submit" class="button-text">Envoyer</button>
          </div>
        </form>
      </section>
    </main>
<% include partials/footer %> 
  </div>
</body>
</html>